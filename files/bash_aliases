# Aliases
alias cls='clear'
alias cp='cp -i'
alias df='df -h'
alias dir='ls --color=auto --format=vertical'
alias du='du -h'
alias edit='${EDITOR}'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep  -i --color'
alias l='ls -CF'
alias la='ls -A'
alias less='less -r'
alias ll='ls -l'
alias ls='ls -hF --color=tty --full-time'
alias mv='mv -i'
alias rm='rm -i'
alias top='top U $USER'
alias vdir='ls --color=auto --format=long'
alias whence='type -a'
